<%= form_for [ :backend ,@contact] , html: {:class => "valid_engine establish", multipart: true} do |f| %>
  <div class="public_form">
    <p>
      <label class="label"><span>*</span>公司名称:</label>
      <%= f.text_field :title, class: 'validate[required] public_input' %>
    </p><br>
    <p>
      <label class="label"><span>*</span>公司地址:</label>
      <%= f.text_field :address, class: 'validate[required] public_input' %>
    </p><br>
    <p>
      <label class="label"><span>*</span>邮编:</label>
      <%= f.text_field :poste, class: 'validate[required] public_input' %>
    </p><br>
    <p>
      <label class="label"><span>*</span>邮箱:</label>
      <%= f.text_field :email, class: 'validate[required] public_input' %>
    </p><br>
    <p>
      <label class="label"><span>*</span>电话:</label>
      <%= f.text_field :phone, class: 'validate[required] public_input' %>
    </p>
  </div>
  <div class="public_form">
    <label class="label">图片上传</label>
    <%= file_field_tag :photo, class: "face" %>
    <% if not @contact.avatars.nil? %>
      <% @contact.avatars.each do |ta|%>
        <a class="pic" href="<%= ta.photo.url %>" ><%= image_tag(ta.photo.url, size: "100x80", title: '点击放大') %></a>
      <% end %>
    <% end %>
  </div>
    <%= render '/backend/shared/form_buttons', :f => f  %>
<% end %>
