<%= form_for [:backend, @info], html:{class: 'valid_engine establish',multipart: true} do |f| %>
  <div  class="public_form">
    <label class="label">标题：</label>
    <%= f.text_field :title, class: 'validate[required]'  %>
  </div> 

  <div  class="public_form">
    <label class="label">资讯内容：</label>
    <%= f.ueditor_text :desc, :width => "80%", :class => "ml150"  %>
  </div>

  <div class="public_form">
    <label class="label">图片上传</label>
    <%= file_field_tag :photo, class: "face" %>
    <% if not @info.avatars.nil? %>
      <% @info.avatars.each do |ta|%>
        <a class="pic" href="<%= ta.photo.url %>" ><%= image_tag(ta.photo.url, size: "50x40", title: '点击放大') %></a>
      <% end %>
    <% else %>
    <% end %>
  </div>

  <div>
    <%= render '/backend/shared/form_buttons',:f => f %>
  </div>
<% end %>