<% list_link = backend_infos_path(:back => request.fullpath) %>

<h1>
  <%= "#{@info.try(:title)}"%>资讯详情：

  <%= link_to '返回', params[:back] || list_link %>
  <%= link_to '修改', edit_backend_info_path(@info, :back => request.fullpath)%>
</h1>
<div class="well_head">
  <div class="jianju_x"></div>

  <div class='mb20 document_content'>
    <p><%= @info.desc.html_safe rescue nil%></p>
  </div>

  <div class="public_form">
      <label class="label">图片：</label>
      <span class="validate-name">
        <% @info.avatars.each do |ta|%>
             <a class="pic" href="<%= ta.photo.url %>" ><%= image_tag(ta.photo.url, size: "100x80", title: '点击放大') %></a>
          <% end %>
      </span>
    </div> 
</div>