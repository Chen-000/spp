<div class="plate">
    <ul>
      <%= plate_link backend_products_path, color: 'red', title: '产品管理', desc: '管理产品' %>
       <%= plate_link backend_programmes_path, color: 'orange', title: '方案管理', desc: '管理方案' %>
    </ul>
  </div>
  <div class="line"></div>  
    <div class="well_head">
  <table class="common">
    <tbody>
      <tr>
        <td>序号</td>
        <td>产品名称</td>
        <td>产品简介</td>
        <td>创建时间</td>
        <td>操作</td>
      </tr>

      <% @products.each_with_index  do |product, index| %>
        <tr>
         <td><%= index_no(index, 20)%></td>
         <td><%=product.name%></td>
         <td><%=product.introduction%></td>
         <td><%=product.created_at.strftime("%Y-%m-%d %H:%M:%S")%></td>
         <td>
         <%= link_to '查看', backend_product_path(product, :back => request.fullpath)%>
         <%= link_to '修改', edit_backend_product_path(product, :back => request.fullpath)%>
         <%= link_to '删除', backend_product_path(product, :back => request.fullpath), data: {method: :delete,confirm: "你确定删除?"} %>
         </td>
       </tr>

      <% end %>
      <td class="textc operation">  
      </td>
    </tbody>
  </table>
  <%= paginate @products %>
</div>
